.list-fields
  .field
    = f.hidden_field :_destroy , class: 'remove_fields'
    = f.label :list_id
    = f.collection_select :list_id, List.all, :id, :name, { prompt: true }

  - if f.object.property.try(:data_type).try(:name) == "Prompted"
    .field{class: 'list-fields-multi', style: 'display: none'}
      = f.label :multiple, "Allow multiple?"
      = f.check_box :multiple
  - else
    .field{class: 'list-fields-multi'}
      = f.label :multiple, "Allow multiple?"
      = f.check_box :multiple
