%h1 Listing collections

= link_to 'New Collection', new_collection_path, class: "btn prime-action"

- if @collections.empty?
  %p.info
    \- no collections yet
    = link_to "create one", new_collection_path
- else
  %table
    %tr
      %th Name
      %th Slug
      %th Properties
      %th Things
      %th

    - @collections.each do |collection|
      %tr
        %td= link_to collection.name, edit_collection_path(collection)
        %td= collection.slug
        %td= collection.properties.size
        %td= link_to collection.things.size, collection_index_path(collection.slug)
        %td= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small btn-danger'
