%h1 Listing collections

%table
  %tr
    %th Name
    %th Slug
    %th Properties
    %th

  - @collections.each do |collection|
    %tr
      %td= link_to collection.name, edit_collection_path(collection)
      %td= collection.slug
      %td= collection.properties.size
      %td= link_to 'Destroy', collection, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Collection', new_collection_path, class: "btn"
